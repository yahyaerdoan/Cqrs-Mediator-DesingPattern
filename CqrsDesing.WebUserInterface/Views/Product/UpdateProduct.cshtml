@model UpdateProductCommand
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />

        <label>Product Name</label>
        <input type="hidden" asp-for="ProductId" class="form-control" />

        <input type="text" asp-for="Name" class="form-control" />
        <br />

        <label>Product Price</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />

        <label>Descriptions</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />

        <label>Category Id</label>
        <input type="text" asp-for="CategoryId"  class="form-control" />
        <br />

        <button class="btn btn-primary">Update New Product</button>
    </div>
</form>
