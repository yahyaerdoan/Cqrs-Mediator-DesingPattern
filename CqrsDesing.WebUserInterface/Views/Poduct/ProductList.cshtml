@model List<GetProductQueryResult>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category Name</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><span>$</span>@item.Price</td>
                <td>@item.CategoryName</td>
                <td> <a href="/Category/DeleteCategory/@item.ProductId" class="btn  btn-danger">Delete</a></td>
                <td> <a href="/Category/UpdateCategory/@item.ProductId" class="btn  btn-success">Update</a></td>
            </tr>
        }
    </table>
    <a href"" class="btn  btn-success">New Product</a>
</div>